<div>
  <% if @library %>
    <h2><%= @player.name %>'s Library</h2>
    <%= image_tag @player.avatar %>
    <div><%= link_to "look at a different account?", session_path(session[:player_id]), method: 'delete' %></div>
    <table>
      <thead>
        <tr>
          <th>Game</th>
          <th></th>
          <th class="population-col">Population</th>
        </tr>
      </thead>
      <% @library.each do |game| %>
        <tr>
          <td><%= image_tag url(game) %></td>
          <td><%= game[:name] %></td>
          <td class="population-col"><%= game[:population] %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>Find your library and see how many people are currently in each game.</p>

    <%= render partial: "searchbox" %>
  <% end %>
</div>
