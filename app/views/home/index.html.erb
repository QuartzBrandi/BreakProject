<h1>STEAM TALLY</h1>

<div>
  <% if @library %>
    <%= image_tag @player.avatar %><br>
    <%= @player.name %>'s Library<br>
    <%= link_to "look at a different account?", session_path(session[:player_id]), method: 'delete' %>
    <table>
      <thead>
        <tr>
          <th>Game</th>
          <th></th>
          <th class="population-col">Population</th>
        </tr>
      </thead>
      <% @library.each do |game| %>
        <tr>
          <td><%= image_tag url(game) %></td>
          <td><%= game[:name] %></td>
          <td class="population-col"><%= game[:population] %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>Find your library and see how many people are currently in each game.</p>

    <%= form_tag search_path, method: 'get' do %>
      <%= label_tag :steam_url, "http://steamcommunity.com/" %>
      <%= select_tag :type, options_for_select([["id/", "vanity_url"], ["profiles/", "steamid"]]) %>
      <%= text_field_tag :id %>
      <%= submit_tag "Search" %>
    <% end %>

    <p class="helper-text">Search using your custom Steam URL.</p>
  <% end %>
</div>
